doctype html

head
  title='Login'
  include ./partials/head.pug
  
body
  h1 Welcome to Spades Server

  div
    h1 Login
    
    form(action='/login', method='post')

      div 
        label Username:
        input(type='Username', name='username')
      div
        label Password:
        input(type='Password', name='password')
      div 
        button(type='submit') Submit
  div
    a(href = "/register") Register for an account here!
  